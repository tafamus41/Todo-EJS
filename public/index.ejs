<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Todo Project</title>
  </head>
  <body>
    <div class="container mt-5">
        <h1>FullStack Todo Template Project</h1>
        <hr>
        <div class="rows">
            <h2>TODO LIST</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Priority</th>
                        <th>IsDone</th>
                        <th>CreatedAt</th>
                        <th> <a href="#" class="btn btn-primary">CREATE</a> </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let todo of todos) { %>
                        <tr>
                            <td># <%= todo.id %></td>
                            <td> <%= todo.title %></td>
                            <td> <%= todo.description %></td>
                            <td> <%= priorities[todo.priority] %></td>
                            <td> <%- todo.isDone ? '<span class="text-success">YES</span>' : '<span class="text-danger">NO</span>' %></td>
                            
                            <td> <%= todo.createdAt.toLocaleDateString('tr') %></td>
                            <td>
                                <a href="/view/<%= todo.id %>" class="btn btn-sm btn-secondary">Read</a>
                                <a href="/view/<%= todo.id %>/update" class="btn btn-sm btn-primary">Update</a>
                                <a  href="/view/<%= todo.id %>/delete" class="btn btn-sm btn-danger" onclick="confirm('Are you sure about this?')">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
    
  </body>
</html>
